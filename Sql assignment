--STRING FUNCTIONS – 20 Questions

--Write a query to convert all customer  names to uppercase.
  SELECT UPPER(Customer_Name) from Orders;

--Extract the first 5 characters from Product_Name.
  SELECT substr(Product_Name,1, 5) FROM Orders;

--Find the length of each Customer_Name.
  select Customer_Name, LENGTH(Customer_Name) from Orders;

--Replace the word "Rice" with "Premium Rice" in Product_Name.
  SELECT REPLACE(Product_Name, 'Rice', 'Premium Rice') from Orders;

--Remove leading and trailing spaces from Customer_Name.
  select TRIM(Customer_Name) FROM Orders;

--Concatenate First_Name and Last_Name as Full_Name.
   select First_Name|| ' ' || AS Full_Name from Orders;

--Find customers whose names start with 'A'.
  select * FROM Orders WHERE Customer_Name LIKE 'A%';

--Extract the domain name from Email_ID.
  select substr(Email_id,instr(Email_id)'@') FROM Orders;

--Find the position of '@' in Email_ID.
  select instr('@', Email_ID) from Orders;

--Reverse the Product_Name.
   select  REVERSE(Product_Name) from Orders;

--Convert the first letter of each word in Product_Name to uppercase.
   SELECT INITCAP(Product_Name) AS Capital_Name FROM Orders;

---Extract the last 3 characters from Order_ID.
   select substr(Order_ID,3) from Orders;

---Count how many times letter 'a' appears in Customer_Name.
   select Customer_Name,length(Customer_Name) - LENGTH(REPLACE(LOWER(Customer_Name),'a','')) as count_a
    FROM Orders;

--Mask the last 4 digits of a phone number.
   select 'zzz' || substr(phone_numbr,-4)from orders;

--Split Full_Name into First_Name and Last_Name.
   select  substr(Customer_Name, 1, INSTR(Customer_Name, ' ') - 1) AS First_Name from  Orders;

--Compare two columns ignoring case sensitivity.
   select* from Orders
   WHERE LOWER(Customer_Name) = LOWER('ravi kumar');

--Find customers whose name contains 'kumar'.
   select * from Orders where LOWER(Customer_Name) LIKE '%kumar%';

--Pad Order_ID with leading zeros to make it 6 digits.
   select LPAD(Order_ID,6,'0') from Orders;

--Extract substring between two characters.
   SELECT SUBSTR(Product_Name, 2, 5) AS Substring_Product from Orders;

----NUMERICAL FUNCTIONS – 20 Questions

--Round Unit_Price to 2 decimal places.
  select ROUND(Unit_Price, 2) FROM Orders;

--Find total sales per order.
  select Order_ID, Quantity * Unit_Price AS Total_Sales FROM Orders;

--Calculate average order value.
  select AVG(Quantity * Unit_Price) FROM Orders;

--Find highest product price.
   select max (Unit_Price) FROM Orders;

--Find lowest product price.
   select min(Unit_Price) FROM Orders;

--Find modulus of Quantity divided by 2.
    select MOD(Quantity,2) FROM Orders;

--Convert negative values to positive.
    select ABS(-100) FROM Orders;

--Truncate price without rounding.
    select SQRT(Quantity*Unit_Price) FROM Orders;

--Find square root of total sales.
    select SQRT(Quantity*Unit_Price) FROM Orders;

---Calculate exponential value of a number.
   select T EXP(2) FROM DUAL;

--alculate power of 2^5.
    select POWER(2, 5) AS Result FROM DUAL;

--Find absolute difference between two prices.
    select ABS(MAX(Unit_Price)-MIN(Unit_Price)) as Price-Difference FROM Orders;

--Find random number between 1 and 100.
    select  FLOOR(DBMS_RANDOM.VALUE(1, 101)) AS Random_Number FROM DUAL;

--Divide total sales by number of orders.
   SELECT SUM(Quantity * Unit_Price) / COUNT(*) FROM Orders;

--Find ceiling value of price.
   select CEIL(Unit_Price) as ceil_price FROM Orders;
 
--Find floor value of price.
   select FLOOR(Unit_Price)  as floor_price FROM Orders;

--Convert decimal to integer.
   select cast(Unit_Price AS NUMBER(10,0)) AS Unit_Integer FROM Orders;
--Calculate compound interest.

   SELECT Order_ID, Unit_Price AS Principal,
    ROUND(Unit_Price * POWER(1 + 0.1, 2) - Unit_Price, 2) AS Compound_Interest FROM Orders;